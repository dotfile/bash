# vim: set filetype=bash :
# Bash aliases (~/.bash/aliases.sh)
# Add to .bashrc, `. ~/.bash/thisfile.sh`

# Better usage or output
alias ls="ls -Bhv --color=always --group-directories-first --hide=*pyc"
alias less="less -r" # color support
alias tmux="tmux -2" # 256color
alias thttpd='thttpd -nos -M 0' # symlinks outside cwd, nocache
alias wget='wget -p -nd' # Page reqs and no directories
alias vi='vi -p' # Open multiple files in tabs
alias diff='colordiff'

# Shortcuts 
alias v='vi'
alias ack='ack-grep'
alias grr='grunt build && grunt watch' # Custom to my workflow
alias go='gnome-open'
alias paste='xclip -o -selection clipboard'
alias sighup='kill -HUP'
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Directory Shortcuts
alias symlinks='ls -la | ack "\-\>"' # List symlinks
alias symlink='symlinks'
alias syms='symlinks'
alias ll='symlinks'
alias hidden='ls -d .*' # List hidden
alias lh='hidden'
alias lsl='ls -l'
alias lsa='ls -a'
alias lst='ls --sort=time'
alias lslt='lsl --sort=time'
alias lstl='lsl --sort=time'
alias lstla='lslt --sort=time'
alias lslat='lslt --sort=time'
alias lslta='lslt --sort=time'
alias lstla='lslt --sort=time'

# Git Shortcuts
alias commit='git commit -a'
alias push='git push github master || git push origin master'
alias pull='git pull github master || git pull origin master'

# Python Virtualenv Shortcuts
alias virtualize='virtualenv virtualenv'
alias activate='source virtualenv/bin/activate'

# Larger, custom stuff
alias resolution='xdpyinfo  | grep "dimensions:"'
alias reso='resolution'

# Mimic vim
alias :q='exit'
alias :qa='exit'

# Typofix
alias cd.='cd ..'
alias cd..='cd ..'
alias clea='clear'
alias clera='clear'
alias cear='clear'
alias clar='clear'
alias cler='clear'
alias clasr='clear'
alias clarr='clear'
alias celar='clear'
alias claer='clear'
alias lcear='clear'
alias cleear='clear'
alias chmox='chmod'
alias eit='exit'
alias exi='exit'
alias ext='exit'
alias eixt='exit'
alias gt='git'
alias gru='grunt'
alias grun='grunt'
alias unt='grunt'
alias kiall='killall'
alias kilall='killall'
alias killal='killall'
alias l='ls'
alias s='ls'
alias sl='ls'
alias ks='ls'
alias rls='ls'
alias ls-l='ls -l'
alias nmp='npm'
alias sshadd='ssh-add'
alias ssh-ad='ssh-add'

# Reminders
alias quit='echo "No, exit. Get it right."'

# Funny
alias fucking='sudo '

